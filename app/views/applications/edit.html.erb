<div class="page-header">
  <h1>Editing Application #<%= @application.job.title %></h1>
</div>

<%= form_tag(application_url(@application), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :job_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :job_id, @application.job_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :mom_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :mom_id, @application.mom_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Application", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
