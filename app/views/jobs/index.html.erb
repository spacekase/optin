<div class="page-header">
  <h1>Jobs</h1>
</div>

  <% if mom_signed_in? %>   
    <% @jobs = Job.all %>
   <% end %>

<p><%= link_to 'Add a New Job', new_job_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Company</th>
      <th>Title</th>
      <th>Industry</th>
      <th>Function</th>
      <th>Budget</th>
      <th>Description</th>
      <th>Location</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Hours per week</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company.name %></td>
        <td><%= job.title %></td>
        <td><%= job.industry %></td>
        <td><%= job.function %></td>
        <td><%= job.budget %></td>
        <td><%= job.description %></td>
        <td><%= job.location %></td>
        <td><%= job.start_date %></td>
        <td><%= job.end_date %></td>
        <td><%= job.hours_per_week %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, job_url(job), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_job_url(job), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, job_url(job), method: 'delete', data: { confirm: "Do you really want to delete this job?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

