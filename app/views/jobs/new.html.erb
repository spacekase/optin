<div class="page-header">
  <h1>New Job</h1>
</div>

<%= form_tag(jobs_url, method: 'post', class: 'form-horizontal') do %>

<div class="form-group">
    <%= label_tag :company_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <select name="company_id" class="form-control">
        <% Company.all.each do |company| %>
 
          <option value="<%= company.id %>"><%= company.name %></option>
 
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :industry, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :industry, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :function, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :function, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :budget, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :budget, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :description, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :location, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :location, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :start_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= date_field_tag :start_date, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :end_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= date_field_tag :end_date, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :hours_per_week, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :hours_per_week, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Job", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
