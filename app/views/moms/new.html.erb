<div class="page-header">
  <h1>New Mom</h1>
</div>

<%= form_tag(moms_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :first_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :first_name, nil, class: 'form-control' %>
    </div>
  </div>



  <div class="form-group">
    <%= label_tag :last_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :last_name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :years_experience, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :years_experience, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :email, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :email, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :college, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :college, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :mba, "MBA", class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :mba, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Mom", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
