<div class="page-header">
  <h1>Editing Mom #<%= @mom.id %></h1>
</div>

<%= form_tag(mom_url(@mom), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :first_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :first_name, @mom.first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :last_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :last_name, @mom.last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :years_experience, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :years_experience, @mom.years_experience, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :email, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :email, @mom.email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :college, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :college, @mom.college, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :mba, "MBA", class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :mba, @mom.mba, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Mom", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
